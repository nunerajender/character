<%= simple_form_for :objects, url: "/#{ character_instance.name }/settings/#{ @scope }" do |form| %>
  <%= hidden_field_tag :class_name, character_instance.user_model %>

  <div class='row'>
    <div class='small-12 columns'>

            <template id='new_item_template'>
              <%= form.simple_fields_for "[]", character_instance.user_model.constantize.new do |f| %>

                <div class='row'>
                  <%= f.input :email,
                              as: :email,
                              label: false,
                              placeholder: 'Email',
                              required: true,
                              wrapper_class: 'large-5 large-offset-3 columns' %>

                  <div class='large-4 columns chr-actions'>
                    <i class='chr-action-pin'></i><a class='action_cancel' data-item-class='row'>Cancel</a>
                  </div>
                </div>

              <% end %>
            </template>

      <% character_instance.user_model.constantize.all.each do |user| %>
        <%= form.simple_fields_for "[]", user do |f| %>

          <div class='row'>
            <div class='large-3 columns'><%= image_tag user.chr_thumbnail_url %></div>

            <%= f.input :email,
                        as: :email,
                        label: false,
                        placeholder: 'Email',
                        wrapper_class: 'large-5 columns' %>

            <div class='large-4 columns chr-actions'>
              <i class='chr-action-pin'></i><a class='action_delete' data-item-class='row'>Delete</a>
              <%= f.input :_destroy, as: :hidden, value: false %>
            </div>
          </div>

        <% end %>
      <% end %>
    </div>
  </div>
<% end %>