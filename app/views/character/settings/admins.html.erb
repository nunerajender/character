<%= simple_form_for :objects, url: '/admin/settings/update' do |form| %>
  <%= hidden_field_tag :class_name, "Character::AdminUser" %>

  <div class='chr-settings-admins'>
    <div class='row chr-details-padding chr-row-border'>
      <div class='small-12 columns'>

              <template id='new_item_template'>
                <%= form.simple_fields_for "[]", Character::AdminUser.new do |f| %>

                  <div class='row'>
                    <%= f.input :email,
                                as: :email,
                                label: false,
                                placeholder: 'Email',
                                wrapper_class: 'large-5 large-offset-3 columns' %>

                    <div class='large-4 columns chr-actions'>
                      <i class='chr-action-pin'></i><a href='#' class='action_cancel'>Cancel</a>
                    </div>
                  </div>

                <% end %>
              </template>

        <% Character::AdminUser.all.each do |admin_user| %>
          <%= form.simple_fields_for "[]", admin_user do |f| %>

            <div class='row'>
              <div class='large-3 columns'><%= image_tag admin_user.character_thumb_url %></div>

              <%= f.input :email,
                          as: :email,
                          label: false,
                          placeholder: 'Email',
                          wrapper_class: 'large-5 columns' %>

              <div class='large-4 columns chr-actions'>
                <i class='chr-action-pin'></i><a href='#' class='action_delete' data-item-class='row'>Delete</a>
                <%= f.input :_destroy, as: :hidden, value: false %>
              </div>
            </div>

          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>