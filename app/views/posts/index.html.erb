<% set_meta_tags  title: @title,
                  description: @description,
                  canonical: "http://#{ @domain }#{ posts_index_path }",
                  open_graph: { type: 'blog',
                                title: @title,
                                description: @description,
                                url: "http://#{ @domain }#{ posts_index_path }" } %>

<% @posts.each do |p| %>
  <%= render partial: 'post', locals: { post: p } %>
<% end %>