<% set_meta_tags  title:       @post.title,
                  description: @post.subtitle,
                  keywords:    @post.keywords,
                  canonical:   "http://#{ @blog_domain }#{ blog_post_path(@post.slug) }",
                  :og => {
                    :title  => @post.title,
                    :type   => 'article',
                    :url    => "http://#{ @blog_domain }#{ blog_post_path(@post.slug) }",
                    :image  => @post.featured_image.opengraph.url } %>

<article class='blog-post'>
  <header>
    <h1><%= link_to @post.title, blog_post_path(@post), rel: 'bookmark', class: 'blog-post-link' %></h1>
  </header>

  <div class='content'>
    <%= @post.body_html.html_safe %>
  </div>
</article>