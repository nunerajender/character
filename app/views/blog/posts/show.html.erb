<% set_meta_tags  title:       @post.title,
                  description: @post.subtitle,
                  keywords:    @post.keywords,
                  canonical:   "http://#{ @blog_domain }#{ blog_post_path(@post.slug) }",
                  :og => {
                    :title    => @post.title,
                    :type     => 'article',
                    :url      => "http://#{ @blog_domain }#{ blog_post_path(@post.slug) }",
                    :image    => @post.featured_image.opengraph.url } %>

<article class='post'>
  <header class='post-header'>
    <h1 class='post-title'><%= link_to @post.title, blog_post_path(@post), rel: 'bookmark' %></h1>
    <h2 class='post-subtitle'><%= @post.subtitle.html_safe %></h2>
  </header>

  <section class='post-body'>
    <%= @post.body_html.html_safe %>
  </section>
</article>